<?xml version="1.0" encoding="utf-8"?>
<!--我的页面头像部分-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/user_message_layout"
    android:paddingTop="20dp"
    android:paddingBottom="28dp">
    <!--头像-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_user_avatar"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_account_circle_grey_100_48dp"/>
    <!--昵称-->
    <TextView
        android:textSize="17.0sp"
        android:textColor="#ff333333"
        android:ellipsize="end"
        android:id="@+id/text_user_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dp"
        android:text="@string/app_name"
        android:maxLines="1"
        android:maxLength="15"
        android:layout_centerHorizontal="true" />

    <!--ID-->
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_uid_exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7.0dp"
        android:layout_below="@id/text_user_nickname"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID:"
            android:textColor="#ff999999"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/text_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:textColor="#ff999999"
            android:textSize="13sp"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>